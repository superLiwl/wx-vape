.header-container {
  width: 100%;
  height: 80rpx;
  top: 0;
  align-items: center;
  background: #4c0000;
  display: flex;
  margin-bottom: 6rpx;
  position: fixed;
}

.serach-container {
  flex-grow: 1;
  height: 60rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
  display: flex;
  border: solid #e4e3e2 1px;
  align-items: center;
  justify-content: center;
  background-color: black;
}

.serach-container image {
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.serach-container input {
  height: 100%;
  flex-grow: 1;
  font-size: 30rpx;
  color: white;
  margin-left: 20rpx;
}

.article-container {
  width: 100%;
  margin-top: 80rpx;
}

.article-container view {
  width: 100%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding-top: 10rpx;
  background-color: #5b5b5b;
  border-bottom: solid #c4c3c2 1px;
}

.article-tilte {
  display: flex;
  margin: 20rpx 40rpx;
  align-items: center;
  font-size: 34prx;
  color: white;
}

.article-content {
  display: -webkit-box;
  margin: 20rpx 40rpx 20rpx 40rpx;
  font-size: 26rpx;
  color: white;
  -webkit-box-orient: vertical;
  word-break: break-all;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.loading {
  color: white;
  text-align: center;
  font-size: 26rpx;
}
