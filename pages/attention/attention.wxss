.attention {
  width: 750rpx;
  overflow: hidden;
}

.header-container {
  width: 100%;
  height: 70px;
  padding: 5px;
  align-items: center;
  display: flex;
}

/* 头像 */

.user-photo {
  margin-left: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}

/* 昵称 */

.user-name {
  display: flex;
  height: 50%;
  margin-left: 40rpx;
  align-items: center;
  font-size: 26rpx;
  color: white;
}

/* 朋友动态栏 */

.friend-container {
  margin-left: 60rpx;
  margin-right: 60rpx;
}

/* 朋友圈文本信息 */

.friend-text {
  font-size: 30rpx;
  color: white;
  text-decoration-line: underline;
}

/* 朋友圈图片框 */

.friend-image-container {
  width: 100%;
  display: flex;
  margin-top: 5px;
  flex-wrap: wrap;
}

/* 朋友圈图片item */

.friend-image {
  width: 32%;
  height: 140rpx;
  border: solid #fff 1rpx;
}

/* 评论栏 */

.comment-container {
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 10rpx;
  margin-left: 60rpx;
  margin-top: 20rpx;
  margin-right: 60rpx;
  background-color: #626262;
  border-radius: 10rpx;
}

/* 评论人 */

.commentator {
  font-size: 26rpx;
  color: #f0f8ff;
}

/* “回复”文字 */

.reply {
  font-size: 26rpx;
}

/* 被回复人 */

.be-commented {
  font-size: 26rpx;
  color: #f0f8ff;
}

/* 回复内容 */

.comment-content {
  font-size: 26rpx;
}

.button-container {
  margin-top: 10rpx;
  padding-top: 20rpx;
  width: 100%;
  flex-direction: row;
  height: 50rpx;
  justify-content: flex-end;
  display: flex;
}

.praise-parent {
  display: flex;
  justify-content: center;
  border-left: solid #fff 1px;
  border-top: solid #fff 1px;
  border-bottom: solid #fff 1px;
  border-top-left-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
}

.praise-btn {
  justify-content: center;
  display: flex;
  width: 150rpx;
}

.praise-txt {
  display: flex;
  height: 100%;
  color: white;
  align-items: center;
  font-size: 26rpx;
}

.praise-img {
  display: flex;
  margin-top: 5rpx;
  margin-left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.comment-parent {
  display: flex;
  margin-right: 40rpx;
  justify-content: center;
  border: solid #fff 1px;
  border-top-left-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
}

.comment-btn {
  width: 150rpx;
  justify-content: center;
  display: flex;
}

.comment-txt {
  display: flex;
  height: 100%;
  margin-left: 10rpx;
  color: white;
  align-items: center;
  font-size: 26rpx;
}

.comment-img {
  margin-left: 10rpx;
  margin-top: 5rpx;
  width: 40rpx;
  height: 40rpx;
}

.rewards-parent {
  display: flex;
  margin-right: 40rpx;
  justify-content: center;
  border: solid #fff 1px;
  border-top-left-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
}

.rewards-btn {
  width: 150rpx;
  justify-content: center;
  display: flex;
}

.rewards {
  display: flex;
  height: 100%;
  margin-left: 10rpx;
  color: white;
  align-items: center;
  font-size: 26rpx;
}

.rewards-img {
  margin-left: 10rpx;
  margin-top: 5rpx;
  width: 40rpx;
  height: 40rpx;
}

.praise-container {
  width: 100%;
  display: flex;
  padding-top: 10rpx;
  align-items: center;
  border-bottom: solid #fff 1px;
}

.heart-img {
  width: 40rpx;
  height: 40rpx;
}

.parise-name {
  font-size: 26rpx;
  margin-left: 10rpx;
  color: white;
}

.loading {
  color: white;
  text-align: center;
  font-size: 26rpx;
}
