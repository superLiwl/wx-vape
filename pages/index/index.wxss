.header-container {
  width: 100%;
  height: 80rpx;
  align-items: center;
  background: #4c0000;
  display: flex;
  margin-bottom: 6rpx;
}

.serach-container {
  flex-grow: 1;
  height: 60rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-radius: 10rpx;
  display: flex;
  border: solid #e4e3e2 1px;
  align-items: center;
  justify-content: center;
  background-color: black;
}

.search-icon {
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
}

.search-input {
  height: 100%;
  flex-grow: 1;
  font-size: 30rpx;
  color: white;
  margin-left: 20rpx;
}

.camera {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
}

.slide-image {
  width: 100%;
}

.button-container {
  background-color: black;
  height: 160rpx;
  width: 100%;
  display: flex;
}

.top-btn {
  border-right: solid #fff 1px;
  height: 100%;
  margin: 0.5px;
}

.encyclopedias-btn {
  border-right: solid #fff 1px;
  height: 100%;
  margin: 0.5px;
}

.nearby-btn {
  border-right: solid #fff 1px;
  height: 100%;
  margin: 0.5px;
}

.flower-btn {
  border-right: solid #fff 1px;
  height: 100%;
  margin: 0.5px;
}

.sign-btn {
  height: 100%;
  margin: 0.5px;
}

.image-container {
  border-top: solid #fff 1px;
}

.image-header-container {
  display: flex;
  width: 100%;
  justify-content: space-around;
  height: 150px;
}

.image-header-child {
  width: 49.7%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.image1 {
  width: 49.7%;
  height: 100%;
}

.image2 {
  width: 100%;
  height: 49.9%;
}

.image3 {
  width: 100%;
  height: 49.9%;
  margin-top: 1px;
}

.image-form-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.image-item {
  width: 24.8%;
  height: 200rpx;
  margin-top: 1px;
}

.loading {
  color: white;
  text-align: center;
  font-size: 26rpx;
}
