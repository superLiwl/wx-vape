.top {
  width: 750rpx;
  /* overflow: hidden; */
}

.header-container {
  width: 100%;
  height: 200rpx;
  padding-top: 20rpx;
  align-items: center;
  display: flex;
}

.user-photo {
  margin-left: 80rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 100rpx;
}

.name-container {
  flex-grow: 1;
  margin-left: 40rpx;
  height: 100%;
}

/* 昵称 */

.user-name {
  display: flex;
  height: 50%;
  text-align: center;
  align-items: center;
  font-size: 34prx;
  color: white;
}

/* 签名简介 */

.user-autograph {
  display: flex;
  height: 50%;
  margin-top: 10rpx;
  font-size: 26rpx;
  color: white;
}

.attention-state {
  width: 40px;
  height: 34px;
  margin-right: 80rpx;
}

.information-container {
  padding-left: 60rpx;
  text-indent: 60rpx;
  text-align: left;
  padding-right: 60rpx;
}

.information-container text {
  font-size: 32rpx;
  color: white;
  text-decoration-line: underline;
}

.lable-container {
  display: flex;
  flex-wrap: wrap;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  margin-top: 30rpx;
  width: 100%;
  background-color: black;
}

.lable {
  display: flex;
  width: 32%;
  height: 60rpx;
  margin-top: 20rpx;
  color: white;
  font-size: 26rpx;
  align-items: center;
  justify-content: center;
  background: #626262;
  margin-left: 60rpx;
  border-radius: 30rpx;
}

.lable-big-margin {
  display: flex;
  width: 32%;
  height: 60rpx;
  margin-top: 20rpx;
  color: white;
  font-size: 26rpx;
  align-items: center;
  justify-content: center;
  background: #626262;
  margin-left: 150rpx;
  border-radius: 30rpx;
}

.smoke-progress-container {
  height: 100rpx;
  align-items: center;
  background-color: #626262;
  display: flex;
}

.smoke-progress-container image {
  width: 100rpx;
  margin-left: 30rpx;
  height: 100%;
}

.smoke-progress-container view {
  display: block;
  height: 60rpx;
  flex-grow: 1;
  margin-left: 20rpx;
  border-radius: 20rpx;
  border: solid #fff 1px;
  position: relative;
  overflow: hidden;
}

.smoke-progress-container text {
  font-size: 26rpx;
  margin-left: 20rpx;
  margin-right: 30rpx;
  color: white;
}

.progress {
  position: absolute;
  /* left: -40rpx; */
}

.rank-item-container {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}

.ranking-img {
  width: 54rpx;
  height: 64rpx;
  margin-left: 40rpx;
}

.friend-photo {
  margin-left: 40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
}

.friend-name {
  display: flex;
  height: 100%;
  font-size: 26rpx;
  margin-left: 20rpx;
  margin-right: 30rpx;
  align-items: center;
  color: white;
  flex-grow: 1;
}

.friend-smoke {
  display: flex;
  height: 100%;
  font-size: 26rpx;
  margin-left: 20rpx;
  margin-right: 90rpx;
  align-items: center;
  color: white;
}
